<div class="container">
  <div class='row'>
    <div class='mx-auto col-11 col-sm-10 col-lg-8 col-xl-6'>
      <h2>新規登録</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :ニックネーム %><br />
          <%= f.text_field :name, autofocus: true, placeholder: "ニックネーム" %>
        </div>

        <div class="field">
          <%= f.label :メールアドレス %><br />
          <%= f.text_field :email, autofocus: true, placeholder: "sample@example" %>
        </div>

        <div class="field">
          <%= f.label :パスワード（６文字以内） %><br>
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :パスワード確認 %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="actions">
          <%= f.submit "新規登録する" %>
        </div>
      <% end %>

      <%= render "public/shared/links" %>
    </div>
  </div>
</div>