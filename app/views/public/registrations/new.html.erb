<div class= "container">
  <div class="col-6 mb-5">
    <h2 class= "text-center mt-3 mb-3 font-weight-bold">新規会員登録</h2>
  </div>
  <div class="row">
   <div class="col-sm-8">
    <%= form_with model: @user, url: user_registration_path do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>

      <div class="field row mb-3">
        <%= f.label :ニックネーム, class: 'col-md-4' %><br />
        <%= f.text_field :name, autofocus: true, placeholder: "ニックネーム" %>
      </div>

      <div class="field row mb-3">
        <%= f.label :メールアドレス, class: 'col-md-4' %><br />
        <%= f.text_field :email, autofocus: true, placeholder: "sample@example" %>
      </div>

      <div class="field row mb-3">
        <%= f.label :性別, class: 'col-md-4' %><br />
        <%= f.radio_button :gender, 'man' %>
        <%= f.label :gender_man, '男性' %>
        <%= f.radio_button :gender, 'woman' %>
        <%= f.label :gender_woman, '女性' %>
      </div>

      <div class="field row mb-3">
        <%= f.label :年齢, class: 'col-md-4' %><br />
        <%= f.number_field :age, min: 0, max:100 %>歳
      </div>

      <div class="form-group">
        <%= f.label :自己紹介 %><br />
        <%= f.text_area :introduction, autofocus: true, class: "form-control", style: "height:8rem;", placeholder: "はじめまして。今回は運動がなかなか続かないため、なにかいいトレーニングはないかを探すため登録しました。よろしくお願いします。" %>
      </div>

      <div class="field row mb-3">
        <%= f.label :パスワード（６文字以上）, class: 'col-md-4' %><br>
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="field row mb-3">
        <%= f.label :パスワード確認, class: 'col-md-4' %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="actions row-6 mb-3 ">
        <%= f.submit "新規登録する", class:" mt-3 btn btn-success" %>
      </div>
    <% end %>
    <%= render "public/shared/links" %>
    </div>
  </div>
</div>