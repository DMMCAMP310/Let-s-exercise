<div class="container">
  <h2>会員情報</h2>
    <div class="row">
      <%= image_tag @user.get_profile_image, style: "border-radius: 50%; object-fit:cover;", size: '100x100' %>
    </div>
    <div class="follow-list">
        <%= link_to user_followings_path(@user.id) do %>
          フォロー<%= @user.followings.count %>
          <% end %>
        <%= link_to user_followers_path(@user.id) do %>
          フォロワー<%= @user.followers.count %>
        <% end %>
        <% if current_user == @user %>
          <% if @user.name != "guestuser" %>
            <button class= 'btn btn-light'>
              <%= link_to edit_user_path do %>
                <i class="fas fa-user-cog"></i>
              <% end %>
            </button>
          <% end %>
        <% else %>
          <% if current_user.following?(@user) %>
            <button class= 'btn btn-info'>
              <%= link_to "フォロー外す", user_relationships_path(@user.id), method: :delete, class: 'text-light' %>
            </button>
          <% else %>
            <button class= 'btn btn-success'>
              <%= link_to "フォローする", user_relationships_path(@user.id), method: :post, class: 'text-light' %>
            </button>
          <% end %>
        <% end %>
      </div>
    <div class="row">
      <%= @user.name %>
      <%= @user.gender_i18n %>
      <%= @user.age %>歳
    </div>
    <div class="user-introduction">
        <%= simple_format(@user.introduction) %>
    </div>
    <div class="row my-trainings">
      <%= render 'public/trainings/index', trainings: @trainings %>
    </div>
</div>