<div class="container">
  <h2>会員情報</h2>
  <div class='row'>
    <div>
      <table class="table">
        <thead>
          <tr>
            <th><%= image_tag @user.get_profile_image, size: '100x100' %><%= @user.name %></th>
            <th><%= @user.gender_i18n %></th>
            <th><%= @user.age %>歳</th>
            <th>
              <%= link_to user_followings_path(@user.id) do %>
                フォロー<%= @user.followings.count %>
              <% end %>
            </th>
            <th>
              <%= link_to user_followers_path(@user.id) do %>
                フォロワー<%= @user.followers.count %>
              <% end %>
            </th>
            <th>
              <% if current_user == @user %>
                <% if @user.name != "guestuser" %>
                  <%= link_to "編集", edit_user_path %>
                <% end %>
              <% else %>
                <% if current_user.following?(@user) %>
                <button class= 'btn btn-info'>
                  <%= link_to "フォロー外す", user_relationships_path(@user.id), method: :delete, class: 'text-light' %>
                </button>
                <% else %>
                <button class= 'btn btn-success'>
                  <%= link_to "フォローする", user_relationships_path(@user.id), method: :post, class: 'text-light' %>
                </button>
                <% end %>
              <% end %>
            </th>
          </tr>
        </thead>
      </table>
      <%= @user.introduction %>
      <%= render 'public/trainings/index', trainings: @trainings %>
    </div>
  </div>
</div>