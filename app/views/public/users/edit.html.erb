<div class="container">
  <div class='row'>
    <div class='mx-auto col-11 col-sm-10 col-lg-8 col-xl-6'>
      <h2>会員情報を編集する</h2>
      <%= form_with model:@user, local:true do |f| %>
        <%= render 'layouts/errors', obj: @user %>
        <div class="form-group">
          <%= f.label :プロフィール画像 %>
          <%= f.file_field :profile_image, class: "form-control-file user_image", accept: 'image/*' %>
        </div>
        <div class="form-group">
          <%= f.label :ニックネーム %><br>
          <%= f.text_field :name %>
        </div>
        <div class="form-group">
          <%= f.label :年齢 %><br>
          <%= f.text_field :age %>歳
        </div>
        <div class="form-group">
          <%= f.label :自己紹介 %>
          <%= f.text_area :introduction, class: "form-control introduction" %>
        </div>
        <div class="form-group">
          <%= f.submit "編集する", class: 'btn btn-success' %>
          <%= link_to "退会する", unsubscribe_path, class: 'btn btn-danger' %>
        </div>
      <% end %>
    </div>
  </div>
</div>