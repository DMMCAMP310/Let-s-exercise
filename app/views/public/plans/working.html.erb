<div class="content-box">
  <table class="table">
    <tbody>
      <tr>
        <td colspan="2" style="border:none;">
          <p>
            全体達成<%= select_tag 'name', options_for_select((0..100).to_a), include_blank: true %>%
            90%達成でレベルアップ　60%以上達成で継続　60%以下でレベルダウン、見直し
          </p>
        </td>
      </tr>
      <% @plans.each do |plan| %>
        <tr>
          <td colspan="2" style="border:none;">
            <%= plan.id %>
            <%= plan.title %>
          </td>
        </tr>
        <tr>
          <%= form_with  url: plan_week_enables_path(plan), local:true, method: :patch  do |f| %>
          <td style="border:none;">
            <%= collection_check_boxes(:plan, :week_ids, Week.all, :id, :name) do |bbb| %>
          
              <%= bbb.label { bbb.check_box(checked: plan.week_enables.find_by(week_id: bbb.object.id).checked) + bbb.text } %>
            <% end %>
          </td>
          <td style="border:none;">
            <% ratio = ((plan.week_enables.where(checked: true).count.to_f / 7) * 100).round(1)%>
            達成<%= ratio %>%
            <%= button_tag type: "submit", class: "btn btn-default" do %>
              <i class="fas fa-sync"></i>
            <% end %>
          </td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>