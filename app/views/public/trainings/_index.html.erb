<table class="table">
  <thead>
    <tr>
      <th>トレーニング名</th>
      <th>期待できる効果</th>
      <th>達成目安</th>
    </tr>
  </thead>
  <% trainings.each do |training| %>
  <tbody>
    <tr>
      <td><%= link_to training.name, training_path(training) %></td>
      <td><%= training.result %></td>
      <td><%= training.goal %></td>
    </tr>
  </tbody>
  <% end %>
</table>