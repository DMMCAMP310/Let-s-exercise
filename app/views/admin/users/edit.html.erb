<div class="container">
  <div class='row'>
    <div class='mx-auto col-11 col-sm-10 col-lg-8 col-xl-6'>
      <h2>会員情報を編集する</h2>
      <%= form_with model: @user, url: admin_user_path(@user.id), local:true do |f| %>
        <%= render 'layouts/errors', obj: @user %>
        <div class="form-group">
          <%= f.label :プロフィール画像 %>
          <%= f.file_field :profile_image %>
        </div>
        <div class="form-group">
          <%= f.label :ニックネーム %>
          <%= f.text_field :name %>
        </div>
        <div class="form-group">
          <%= f.label :年齢 %>
          <%= f.text_field :age %>歳
        </div>
        <div class="form-group">
          <%= f.label :自己紹介 %>
          <%= f.text_area :introduction, class: "form-control introduction" %>
        </div>
        <div class="form-group">
          <%= f.label :ユーザー情報 %>
          <%= f.radio_button :is_deleted, 'false' %>
          <%= f.label :is_deleted, '有効' %>
          <%= f.radio_button :is_deleted, 'true' %>
          <%= f.label :is_deleted, '退会' %>
        </div>
        <div class="form-group">
          <%= f.submit class: 'btn btn-secondary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>