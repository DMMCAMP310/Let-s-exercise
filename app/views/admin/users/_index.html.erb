
<% users.each do |user| %>
  <div class="content-box">
    <table class="table">
      <thead style="border:none;">
        <tr style="border:none;">
          <th style="border:none;">プロフィール画像</th>
          <th style="border:none;">ニックネーム</th>
          <th style="border:none;">メールアドレス</th>
          <th style="border:none;">性別</th>
          <th style="border:none;">年齢</th>
          <th style="border:none;">ユーザー情報</th>
          <th style="border:none;"></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= image_tag user.get_profile_image, style: "border-radius: 50%; object-fit:cover;", size: '100x100' %></td>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= user.gender_i18n %></td>
          <td><%= user.age %>歳</td>
          <td>
            <% if user.is_deleted == false %>
              <span class="text-success"><strong>有効</strong></span>
            <% elsif %>
              <span class="text-secondary"><strong>凍結済</strong></span>
            <% end %>
          </td>
          <td>
            <%= link_to edit_admin_user_path(user.id),class: 'nav-link', style: "color:gray;" do %>
          <i class="fas fa-exclamation-triangle fa-lg"></i>
        <% end %>
          </td>
        </tr>
      </thead>
    </table>
    <div class="introduction">
      <%= user.introduction %>
    </div>
  </div>
<% end %>